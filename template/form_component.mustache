                <div class="{{class}}" id="{{id}}">
                    <div class="name">
                        {{#icon}}
                            <i class="{{icon}}"></i>
                        {{/icon}}
                        {{name}}
                        {{#cloneable}}
                            <span class="sequence">({{sequence}})</span>
                        {{/cloneable}}
                    </div>
                    {{#cloneable}}
                        <div class="clone">
                            <button class="add" type="button" aria-label="Add another {{name}} based on this one">
                                <i class="fas fa-plus"></i>
                            </button>
                            <button class="remove" type="button" aria-label="Remove this {{name}}" {{remove}}>
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    {{/cloneable}}
                    {{{component}}}
                </div>
